<%= form_for @repository do |f| %>
<div class="field">
  <%= f.label :name %>
  <br>
  <%= f.text_field :name, placeholder: "Name", autofocus: true%>
  <br>
  <%= f.label :description %>
  <br>
  <%= f.text_area :description, :size => '30 x 10', placeholder: "Description" %>
  <br>
  <div class="action">
    <%= f.submit "Create Repo" %>
  </div>
</div>
<%end%>