<div class="favorites">
	<h2>Favorite Versions</h2>
	<ul>
		<% if @user.favorite_versions.empty? %>
			<li>You don't have any favorites, click here to find some face-melting jams!</li>
			<li><%link_to "All Repos", tag_path %>
		<% else %>
			<% @user.favorite_versions.each do |version| %>
				<li class="version-name"><%= link_to "Version in Repo #{version.repository.name}", repository_version_path(version.repository, version) %> 
			<% end %>
		<% end %>
	</ul>
</div>